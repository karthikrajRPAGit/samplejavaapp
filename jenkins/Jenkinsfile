pipeline {
    agent any
    environment {
	DOCKERHUB_CREDENTIALS = credentials('docker')
    }
    stages {
        stage('compile') {
	   steps {
                echo 'compiling..'
		sh 'docker --version'
		echo "Build Number: ${env.BUILD_NUMBER}"
		echo "Branch Name: ${env.GIT_BRANCH}"
		git url: 'https://github.com/puneetgavri/samplejavaapp.git'
		sh script: '/opt/maven/bin/mvn compile'
           }
        }
        stage('codereview-pmd') {
	   steps {
                echo 'codereview..'
		sh script: '/opt/maven/bin/mvn -P metrics pmd:pmd'
           }
	   post {
               success {
		   recordIssues enabledForFailure: true, tool: pmdParser(pattern: '**/target/pmd.xml')
               }
           }		
        }
        stage('unit-test') {
	   steps {
                echo 'unittest..'
	        sh script: '/opt/maven/bin/mvn test'
                 }
	   post {
               success {
                   junit 'target/surefire-reports/*.xml'
               }
           }			
        }
        stage('package') {
	   steps {
                echo 'package......'
		sh script: '/opt/maven/bin/mvn package'	
           }		
        }
	stage('Build Docker Image') {
	   steps {
		 sh "docker build -t dockthik/samplejavaapp-intelprojdevops:${env.BUILD_NUMBER} ."
	   }
	}
	stage('Login to DockerHub') {
	   steps {
		sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
		}
	}
	stage('Push Docker Image') {
	   steps {
		echo 'Pushing Docker Image....'
		sh "docker push dockthik/samplejavaapp-intelprojdevops:${env.BUILD_NUMBER}"
		sh "docker tag dockthik/samplejavaapp-intelprojdevops:${env.BUILD_NUMBER} dockthik/samplejavaapp-intelprojdevops:latest" 
	       }
	   post {
		success {
			script {
				if (env.GIT_BRANCH == "origin/master")
					sh "docker pull dockthik/samplejavaapp-intelassess:latest; docker run -d -p 8081:8081 dockthik/samplejavaapp-intelassess:latest"
			}
		}
	   }
	}
		
    }
    
}
